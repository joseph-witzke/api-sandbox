CREATE TABLE `comments` (
	`commentID` INT(10) NOT NULL AUTO_INCREMENT,
	PRIMARY KEY (`commentID`) USING BTREE
)
COLLATE='utf8mb4_0900_ai_ci'
ENGINE=InnoDB
;

CREATE TABLE `posts` (
	`postID` INT(10) NOT NULL AUTO_INCREMENT,
	`postTitle` VARCHAR(150) NOT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`postDate` DATETIME NOT NULL,
	`postBody` TEXT NOT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`ownerID` INT(10) NOT NULL DEFAULT '0',
	`deleted` TINYINT(3) NOT NULL DEFAULT '0',
	PRIMARY KEY (`postID`) USING BTREE
)
COLLATE='utf8mb4_0900_ai_ci'
ENGINE=InnoDB
;

CREATE TABLE `users` (
	`userID` INT(10) NOT NULL AUTO_INCREMENT,
	`userName` VARCHAR(50) NULL DEFAULT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`userEmail` VARCHAR(50) NULL DEFAULT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`dateCreated` DATETIME NULL DEFAULT NULL,
	`userPassword` VARCHAR(50) NULL DEFAULT NULL COLLATE 'utf8mb4_0900_ai_ci',
	`active` TINYINT(3) NULL DEFAULT NULL,
	PRIMARY KEY (`userID`) USING BTREE
)
COLLATE='utf8mb4_0900_ai_ci'
ENGINE=InnoDB
;
